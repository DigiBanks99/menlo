{
  "files.associations": {
    "**/.github/workflows/*.yml": "github-actions-workflow"
  },
  "chat.tools.autoApprove": true,
  "chat.mcp.autostart": "onlyNew",
  "chat.tools.terminal.autoApprove": {
    "rm": false,
    "rmdir": false,
    "del": false,
    "kill": false,
    "curl": false,
    "wget": false,
    "eval": false,
    "chmod": false,
    "chown": false,
    "/^Remove-Item\\b/i": false
  },
  "chat.agent.maxRequests": 500,
  "[mermaid]": {
    "editor.colorDecorators": true
  }
}
