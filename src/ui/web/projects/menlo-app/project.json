{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "menlo-app",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "projects/menlo-app/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "dependsOn": ["menlo-lib:build"],
      "options": {
        "browser": "projects/menlo-app/src/main.ts",
        "tsConfig": "projects/menlo-app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "projects/menlo-app/public"
          }
        ],
        "styles": [
          "projects/menlo-app/src/styles.scss"
        ],
        "outputPath": "dist/menlo-app"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kB",
              "maximumError": "1MB"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kB",
              "maximumError": "8kB"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "projects/menlo-app/src/environments/environment.ts",
              "with": "projects/menlo-app/src/environments/environment.prod.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production",
      "outputs": [
        "{options.outputPath}"
      ]
    },
    "serve": {
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "menlo-app:build:production"
        },
        "development": {
          "buildTarget": "menlo-app:build:development",
          "proxyConfig": "proxy.conf.json"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/projects/menlo-app"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "projects/menlo-app/**/*.ts",
          "projects/menlo-app/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@analogjs/storybook-angular:start-storybook",
      "options": {
        "configDir": "projects/menlo-app/.storybook",
        "port": 6006
      }
    },
    "build-storybook": {
      "executor": "@analogjs/storybook-angular:build-storybook",
      "options": {
        "configDir": "projects/menlo-app/.storybook",
        "outputDir": "dist/storybook/menlo-app"
      }
    }
  }
}
