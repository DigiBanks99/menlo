{
  "name": "shared-util",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "projects/shared-util/src",
  "prefix": "lib",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "projects/shared-util/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "projects/shared-util/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "projects/shared-util/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "builder": "@angular/build:unit-test",
      "executor": "@analogjs/vitest-angular:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/projects/shared-util",
        "runnerConfig": "vitest.config.mts"
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "projects/shared-util/**/*.ts",
          "projects/shared-util/**/*.html"
        ]
      }
    }
  }
}
