{
  "name": "menlo-lib",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "projects/menlo-lib/src",
  "prefix": "lib",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "projects/menlo-lib/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "projects/menlo-lib/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "projects/menlo-lib/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/projects/menlo-lib"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "projects/menlo-lib/**/*.ts",
          "projects/menlo-lib/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@analogjs/storybook-angular:start-storybook",
      "options": {
        "configDir": "projects/menlo-lib/.storybook",
        "port": 6007
      }
    },
    "build-storybook": {
      "executor": "@analogjs/storybook-angular:build-storybook",
      "options": {
        "configDir": "projects/menlo-lib/.storybook",
        "outputDir": "dist/storybook/menlo-lib"
      }
    }
  }
}
